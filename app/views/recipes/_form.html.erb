<div class="">
  <%= form_with model: recipe do |form| %>
    <div>
        <%= form.label :food_name, "Recipe Name", class: :"block mb-1.5 font-bold"%>
        <%= form.text_field :food_name, class: :"w-full border-2 border-gray-200 p-2 rounded outline-none focus:border-gray-600" %>
        <% @recipe.errors.full_messages_for(:food_name).each do |message|%>
          <span><%= message %></span>
        <% end %>
    </div>

    <div class="grid grid-cols-3">
      <div class="col-span-1 mr-3">
        <%= form.label :time, "Prep. Time", class: :"block mb-1 font-bold" %>
        <%= form.number_field :time, in: 5..60, step: 5, class: :"w-full border-2 border-gray-200 p-2 rounded outline-none focus:border-gray-600"%>
        <% @recipe.errors.full_messages_for(:time).each do |message|%>
          <span><%= message %></span>
        <% end %>
      </div>

      <div class="col-span-2 ml-3 mb-2">
        <%= form.label :author, "Recipe By", class: :"block mb-1 font-bold" %>
        <%= form.text_field :author, class: :"w-full border-2 border-gray-200 p-2 rounded outline-none focus:border-gray-600"%>
        <% @recipe.errors.full_messages_for(:author).each do |message|%>
          <span><%= message %></span>
        <% end %>
      </div>
    </div>

    <div>
      <%= form.label :description, "Recipe Description", class: :"block mb-1 font-bold" %>
      <%= form.text_area :description, size: "x10", class: :"w-full border-2 border-gray-200 p-2 rounded outline-none focus:border-gray-600"%>
      <% @recipe.errors.full_messages_for(:description).each do |message|%>
        <span><%= message %></span>
      <% end %>
    </div>

    <div>
      <%= form.label :foodpic, "Recipe Image", class: :"block mb-1 font-bold" %>
      <%= form.file_field :foodpic, class: :"w-full border-2 border-gray-200 p-2 rounded outline-none focus:border-gray-600"%>
      <% @recipe.errors.full_messages_for(:foodpic).each do |message|%>
        <span><%= message %></span>
      <% end %>
    </div>

    <button>
      <%= form.button "Submit Recipe", type: :submit, class: :"block w-full p-3 font-bold rounded-md border-gray-500 border-2 hover:text-white hover:bg-gray-600 transition ease-out duration-500"%>
    </button>
  <% end %>
</div>
